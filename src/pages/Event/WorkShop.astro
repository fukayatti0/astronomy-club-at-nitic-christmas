---
import Layout from "../../layouts/Layout.astro";
import AstroChristmasBackground from "../../components/AstroChristmasBackground";
import kalediscope from "/public/images/workshop/kalediscope.png";
import suncatcher from "/public/images/workshop/suncatcher.png";
import watersticklight from "/public/images/workshop/watersticklight.png";
import beeswaxCandle from "/public/images/workshop/beeswaxcandle.png";
import { Image } from "astro:assets";

const events = [
  {
    title: "クリスタル万華鏡",
    description: "本物の鉱石を使った特別な万華鏡作り",
    image: kalediscope,
  },
  {
    title: "光るウォータースティックライト",
    description: "クリスマス限定デザインの光る工作",
    image: watersticklight,
  },
  {
    title: "キラキラサンキャッチャー",
    description: "クリスマスツリー型のおしゃれなサンキャッチャー作り",
    image: suncatcher,
  },
  {
    title: "ミツロウキャンドル",
    description: "クリスマスツリー風のナチュラルキャンドル作り",
    image: beeswaxCandle,
  },
  // {
  //   title: "化学カイロ",
  //   description: "天体観測にも使える手作り化学カイロ",
  //   image: handWarmer,
  // },
];
---

<Layout title="クリスマスイベントアイデア">
  <AstroChristmasBackground client:only>
    <main class="container mx-auto px-4 py-8">
      <h1 class="text-2xl font-bold text-center mb-8 gradient-text text-white">
        🎄 ワークショップ 🎄
      </h1>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          events.map((event) => (
            <div class="bg-white/80 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105 hover:shadow-2xl border-2 border-green-500">
              <Image
                src={
                  typeof event.image === "string"
                    ? event.image
                    : event.image.src
                }
                alt={event.title}
                width={400}
                src={event.image}
                class="w-full h-50 object-cover rounded-md"
              />
              <h2 class="text-xl font-bold mt-4">
                <span class="bg-gradient-to-r from-red-500 to-green-500 bg-clip-text text-transparent">
                  {event.title}
                </span>{" "}
                🎅
              </h2>
              <p class="mt-2 text-gray-700">{event.description}</p>
            </div>
          ))
        }
      </div>
    </main>
  </AstroChristmasBackground>
</Layout>
