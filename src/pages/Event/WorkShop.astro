---
import Layout from "../../layouts/ChristmasLayout.astro";
import suncatcher from "/public/images/workshop/suncatcher.webp";
import { Image } from "astro:assets";
import "animate.css";
import handwarmer from "/public/images/workshop/handwarmer.webp"
import EventButton from '../../components/EvnetButton.tsx'


const events = [
  {
    title: "キラキラサンキャッチャー",
    description: "クリスマスツリー型のおしゃれなサンキャッチャー作り",
    image: suncatcher,
  },
  {
    title: "化学カイロ",
    description: "天体観測にも使える手作り化学カイロ",
    image: handwarmer,
  },
];
---

<Layout title="温かい冬の思い出">
    <main class="container mx-auto px-4 py-8">
      <h1 class="text-2xl font-bold text-center mb-8 gradient-text">
        🎄 ワークショップ 🎄
      </h1>
      <h2 class="text-2xl text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-green-500">
        温かい冬の思い出
      </h2>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {
          events.map((event, index) => (
            <div class="bg-white/80 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105 hover:shadow-2xl border-2 border-green-500 animate__animated animate__flipInY">
                <Image
                src={event.image}
                alt={event.title}
                widths={[300, 600, 900]}
                sizes="(max-width: 600px) 300px, (max-width: 900px) 600px, 900px"
                class="w-full h-50 object-cover rounded-md h-96"
                loading={index === 0 ? "eager" : "lazy"}
                />
              <h2 class="text-xl font-bold mt-4">
                <span class="bg-gradient-to-r from-red-500 to-green-500 bg-clip-text text-transparent">
                  {event.title}
                </span>{" "}
                🎅
              </h2>
              <p class="mt-2 text-gray-700">{event.description}</p>
            </div>
          ))
        }
      </div>
      <EventButton/>
    </main>
</Layout>
