---
import Layout from "../../layouts/ChristmasLayout.astro";
import AstroChristmasBackground from "../../components/AstroChristmasBackground";
import { Image } from "astro:assets";
import liquidoxygen from "/public/images/scienceshow/liquid-oxygen.webp";
import blloonnitrogen from "/public/images/scienceshow/balloon-nitrogen.webp";
import dryicesnow from "/public/images/scienceshow/dry-ice-snow.webp";
import frozenbananahummer from "/public/images/scienceshow/frozen-banana-hummer.webp";
import ledcooling from "/public/images/scienceshow/led-cooling.webp";
import "animate.css";

const events = [
  {
    title: "液体酸素の神秘",
    description: "気体の酸素が青い液体に変化する様子を観察します",
    image: liquidoxygen,
  },
  {
    title: "風船の縮小実験",
    description: "液体窒素で風船が縮む不思議な現象を体験",
    image: blloonnitrogen,
  },
  {
    title: "二酸化炭素の雪",
    description: "ドライアイスを使って二酸化炭素の雪を作る実験",
    image: dryicesnow,
  },
  {
    title: "バナナで釘を打つ",
    description: "液体窒素で凍らせたバナナで釘を打つ実験",
    image: frozenbananahummer,
  },
  {
    title: "LEDの冷却実験",
    description: "LED色を液体窒素の中に入れて冷やす実験",
    image: ledcooling,
  },
];
---

<Layout title="極寒の科学">
  <AstroChristmasBackground client:only>
    <main class="container mx-auto px-4 py-8 overflow-auto">
      <h1
        class="text-3xl text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-green-500"
      >
        🎄 サイエンスショー 🎄
      </h1>
      <h2
        class="text-2xl text-center mb-8 text-transparent bg-clip-text bg-gradient-to-r from-red-500 to-green-500"
      >
        〜極寒の科学〜
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
        {
          events.map((event) => (
            <div class="event-card bg-white/80 p-6 rounded-lg shadow-lg transform transition duration-500 hover:scale-105 hover:shadow-2xl border-2 border-green-500 animate__animated animate__backInUp">
              <div class="image-container">
                <Image
                  src={event.image}
                  alt={event.title}
                  width={400}
                  height={300}
                  class="w-full h-full object-cover rounded-md"
                  loading="lazy"
                />
              </div>
              <h2 class="text-xl font-bold mt-4">
                <span class="bg-gradient-to-r from-red-500 to-green-500 bg-clip-text text-transparent">
                  {event.title}
                </span>{" "}
                🎅
              </h2>
              <p class="mt-2 text-gray-700">{event.description}</p>
            </div>
          ))
        }
      </div>
    </main>
  </AstroChristmasBackground>
</Layout>

<style>
  .image-container {
    position: relative;
    width: 100%;
    padding-top: 75%; /* 4:3 Aspect Ratio */
    overflow: hidden;
  }

  .image-container img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
