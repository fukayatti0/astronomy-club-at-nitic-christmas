---
const { width, height, background, color } = Astro.props;
---

<div
  style={{
    width: `${width}px`,
    height: `${height}px`,
    background: background || 'white',
    color: color || 'black',
    display: 'flex',
    alignItems: 'center',
    justifyContent: 'center',
    textAlign: 'center',
    fontSize: '24px',
  }}
>
  {width} x {height}
</div>
