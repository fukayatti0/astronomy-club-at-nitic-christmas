---
import AstroChristmasBackground from '../components/AstroChristmasBackground'

const googleFormUrl = Astro.props.googleFormUrl
const children = Astro.slots.default
---

<AstroChristmasBackground client:only>
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
      <!-- Left side: Quiz Hints -->
      <div class="rounded-xl bg-white/20 p-6 text-black backdrop-blur-md">
        <slot />
      </div>

      <!-- Right side: Google Form -->
      <div class="rounded-xl bg-white/20 p-6 backdrop-blur-md">
        <iframe
          src=googleFormUrl
          width="100%"
          height="600"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          class="rounded-lg"
        >
          Loading...
        </iframe>
      </div>
    </div>
  </div>
</AstroChristmasBackground>