---
import AstroChristmasBackground from "../components/AstroChristmasBackground";

const googleFormUrl = Astro.props.googleFormUrl;
const children = Astro.slots.default;
---

<AstroChristmasBackground client:only>
  <div class="container mx-auto px-4 py-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <!-- Left side: Quiz Hints -->
      <div class="bg-white/20 backdrop-blur-md rounded-xl p-6 text-black">
        <slot />
      </div>

      <!-- Right side: Google Form -->
      <div class="bg-white/20 backdrop-blur-md rounded-xl p-6">
        <iframe
          src={googleFormUrl}
          width="100%"
          height="600"
          frameborder="0"
          marginheight="0"
          marginwidth="0"
          class="rounded-lg"
        >
          Loading...
        </iframe>
      </div>
    </div>
  </div>
</AstroChristmasBackground>
